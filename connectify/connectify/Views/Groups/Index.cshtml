@model connectify.Models.Group

<h2>Groups on Connectify</h2>
<br />

<a href="/Groups/New" class="btn btn-success">Create new group</a>

@foreach (connectify.Models.Group group in ViewBag.Groups)
{
    <div class="card">
        @Html.Partial("GroupInfo", group)
        <div class="d-flex flex-row justify-content-between p-3 border-1 border-top">
            <a href="/Groups/Show/@group.Id" class="btn btn-primary">See group</a>
        </div>
    </div>
}